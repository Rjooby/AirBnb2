<!DOCTYPE html>
<html>
<head>
  <title>Air</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <% id = current_user.id %>
</head>
<body>

  <header class="header">
    <nav class="header-nav group">

      <h2 class="header-logo"><a href="#">SleepingBnT</a></h2>
      <ul class="header-navlist">
      <% if signed_in? %>
        <li><a href="#/users/<%=id%>"><%=current_user.username%></a></li>


        <li>
          <form action="<%=session_url %>" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input
            type="hidden"
            name="authenticity_token"
            value="<%=form_authenticity_token%>">
            <button name="Sign out">Sign Out</button>
          </form>
        </li>
        <li><%= link_to "Add Your Camp", "#/locations/new" %></li>
      <% else %>
        <li><%= link_to "Sign In", new_session_url %></li>
        <li><%= link_to "Sign Up", new_user_url %></li>
      <% end %>

      </ul>

    </nav>
  </header>

<%= yield %>

</body>
</html>
